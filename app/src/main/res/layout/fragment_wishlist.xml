<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout_my_wish_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/activity_my_wish_list_TextView_giftTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_wish_list_gifttip_heading"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_margin="16dp"
        android:drawableLeft="@drawable/ic_gift_color_primary"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_gift_color_primary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_my_wish_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@id/activity_my_wish_list_TextView_giftTitle"
        android:layout_marginTop="50dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_my_wish_list_floatingButton_add_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorPrimaryDark"
        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>