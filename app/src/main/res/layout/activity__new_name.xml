<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activity_NewName">
    
    <EditText
        android:id="@+id/activity_NewName_EditText_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/activity_newname_name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/activity_NewName_EditText_Budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/activity_newname_budget"
        android:inputType="number"/>

</LinearLayout>