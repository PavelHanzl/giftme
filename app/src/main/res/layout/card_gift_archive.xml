<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="#333333">

     <TextView
         android:id="@+id/card_giftArchive_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Name"
         android:textAppearance="@style/TextAppearance.AppCompat.Large"
         android:maxLines="1"
         android:drawableLeft="@drawable/ic_card_gift_light_grey"
         android:drawablePadding="5dp"
         android:textColor="@color/white"
         />

        <TextView
            android:id="@+id/card_giftArchive_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_giftDefault_price"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:maxLines="1"
            android:layout_below="@id/card_giftArchive_name"
            android:textColor="#999"
            />

        <TextView
            android:id="@+id/card_giftArchive_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:paddingLeft="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:maxLines="1"
            android:layout_toRightOf="@id/card_giftArchive_price_title"
            android:layout_toEndOf="@id/card_giftArchive_price_title"
            android:layout_below="@id/card_giftArchive_name"
            android:textColor="#999"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/card_giftArchive_checkbox_bought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>